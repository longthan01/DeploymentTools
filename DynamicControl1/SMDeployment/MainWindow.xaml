<Window xmlns:Boarding="clr-namespace:SMDeployment.UserControls.Boarding"  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Build="clr-namespace:SMDeployment.UserControls.Build"
        xmlns:Tfs="clr-namespace:SMDeployment.UserControls.Tfs"
        xmlns:FileCopier="clr-namespace:SMDeployment.UserControls.FileCopier"
        x:Class="SMDeployment.MainWindow"
        Title="MainWindow"
        Height="350"
        Width="725">
    <Grid x:Name="grdMain">
        <TabControl>
            <TabItem Header="Build">
                <Build:ucMSBuilder />
            </TabItem>
            <TabItem Header="Deploy">
                <Build:ucDeploy />
            </TabItem>
            <TabItem Header="File copier">
                <FileCopier:ucFileCopier/>
            </TabItem>
            <TabItem Header="Get lastest code"/>
            <TabItem Header="Checkout code">
                <Tfs:ucTfsCheckout  />
            </TabItem>
            <TabItem Header="Search TFS history">
                <Tfs:ucTfsSearcher />
            </TabItem>
            <TabItem Header="Boarding">
                <Boarding:ucBoarding />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
