<uc:UserControlBase xmlns:uc="clr-namespace:SMDeployment.UserControls"
    x:Class="SMDeployment.UserControls.Build.ucMSBuilder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SMDeployment.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300">
    <Grid Name="grdMain">
        <local:ucLoading x:Name="imgLoading"
                         Panel.ZIndex="10"
                         Visibility="Hidden"></local:ucLoading>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.3*" />
                <RowDefinition Height="3" />
                <RowDefinition />
                <RowDefinition Height="3" />
                <RowDefinition Height="0.2*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <GridSplitter Style="{StaticResource gridSpliterVertical}"
                          Grid.Row="1"></GridSplitter>
            <Grid Name="grdConfig"
                  Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="3" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="3" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <GridSplitter Grid.Column="1"
                              Style="{StaticResource gridSpliterHorizontal}"></GridSplitter>
                <GridSplitter Grid.Row="1"
                              Grid.ColumnSpan="3"
                              Grid.Column="0"
                              Style="{StaticResource gridSpliterVertical}"></GridSplitter>
                <Grid Grid.Row="0"
                      Grid.Column="0"
                      Name="grdProjectSelection"></Grid>
                <Grid Grid.Row="0"
                      Grid.Column="2">
                    <Button Content="Build"
                            Name="btnRun"
                            Click="btnRun_Click"></Button>
                </Grid>
                <ScrollViewer Grid.Row="2"
                              x:Name="scrollViewerProjectInfor"
                              FlowDirection="LeftToRight"
                              HorizontalScrollBarVisibility="Visible"
                              Grid.ColumnSpan="3">

                </ScrollViewer>
            </Grid>
            <Grid x:Name="grdOutput"
                  Grid.Row="2"></Grid>
            <GridSplitter Style="{StaticResource gridSpliterVertical}"
                          Grid.Row="3"></GridSplitter>
            <Grid x:Name="grdLog"
                  Grid.Row="4">
                <ListView Name="lstLog"></ListView>
            </Grid>
        </Grid>
    </Grid>
</uc:UserControlBase>
