<UserControl x:Class="SMDeployment.UserControls.Tfs.ucTfsDownloadFileResult"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SMDeployment.UserControls.Tfs"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Name="lblAff" Content="Affected: " Grid.Row="0"></Label>
        <Grid Grid.Row="1">
            <DataGrid Name="dgrAffectedFiles" ColumnWidth="*" />
        </Grid>
        <Label Name="lblErr" Content="Error: " Grid.Row="2"></Label>
        <Grid Grid.Row="3">
            <DataGrid Name="dgrErrorFiles" ColumnWidth="*" />
        </Grid>
    </Grid>
</UserControl>
